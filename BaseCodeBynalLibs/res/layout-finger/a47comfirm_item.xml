<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/a47_1_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp" >

        <org.acv.bynal.views.BaseTextView
            android:id="@+id/BaseBoldTextView02"
            android:layout_width="@dimen/dimen_130dp"
            android:layout_height="match_parent"
            android:background="@drawable/xml_a47_comfirm_top"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5dp"
            android:text="受取人氏名"
            android:textColor="#282828"
            android:textSize="@dimen/dimen_10dp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#b5b5b5" />

        <LinearLayout
            android:id="@+id/BaseBoldTextView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xml_a47_comfirm__righttop"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:text="新しい届け住所を入力"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_13dp"
            android:textStyle="bold" >

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/a47comfirm_item_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_27dp"
                android:gravity="center|left"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="abx"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#b5b5b5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp" >

        <org.acv.bynal.views.BaseTextView
            android:layout_width="@dimen/dimen_130dp"
            android:layout_height="match_parent"
            android:background="#e6e6e6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5dp"
            android:text="郵便番号"
            android:textColor="#282828"
            android:textSize="@dimen/dimen_10dp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#b5b5b5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:text="新しい届け住所を入力"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_13dp"
            android:textStyle="bold" >

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/a47comfirm_item_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_27dp"
                android:gravity="center|left"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="abx"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#b5b5b5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp" >

        <org.acv.bynal.views.BaseTextView
            android:layout_width="@dimen/dimen_130dp"
            android:layout_height="match_parent"
            android:background="#e6e6e6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5dp"
            android:text="配送先住所"
            android:textColor="#282828"
            android:textSize="@dimen/dimen_10dp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#b5b5b5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:text="新しい届け住所を入力"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_13dp"
            android:textStyle="bold" >

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/a47comfirm_item_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_27dp"
                android:gravity="center|left"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="abx"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#b5b5b5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp" >

        <org.acv.bynal.views.BaseTextView
            android:layout_width="@dimen/dimen_130dp"
            android:layout_height="match_parent"
            android:background="@drawable/xml_a47_comfirm_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5dp"
            android:text="連絡先（ハイフンなし）"
            android:textColor="#282828"
            android:textSize="@dimen/dimen_10dp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#b5b5b5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xml_a47_comfirm_rightbottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:text="新しい届け住所を入力" >

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/a47comfirm_item_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_27dp"
                android:background="@drawable/transfer"
                android:gravity="center|left"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="abx"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>