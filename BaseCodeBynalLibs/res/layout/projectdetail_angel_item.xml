<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="@dimen/dimen_150dp"
    android:layout_height="@dimen/dimen_190dp"
    android:orientation="vertical" >
    <ImageView
                 android:id="@+id/angel_img_bg"
                 android:layout_width="@dimen/dimen_148dp"
                 android:layout_height="@dimen/dimen_148dp"
                 android:background="@drawable/detail_angel_image"
                 android:scaleType="fitXY"/>  
	        <ImageView
                 android:id="@+id/angel_img"
                 android:layout_width="@dimen/dimen_147dp"
                 android:layout_height="@dimen/dimen_146dp"
                 android:src="@drawable/default_user_square2"
                 android:layout_margin="0dp"
                 android:scaleType="fitXY"/> 
	<LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_below="@+id/angel_img"
	         android:gravity="center|center_vertical"
	         android:layout_marginTop="@dimen/dimen_10dp"
	         android:weightSum="2" >
			<org.acv.bynal.views.BaseBoldTextView
	         	    android:id="@+id/angel_name_txt"
	         	    android:layout_width="wrap_content"
	         	    android:layout_height="@dimen/dimen_20dp"
	         	    android:gravity="center"
	         	    android:textSize="@dimen/dimen_15dp"
	         	    android:drawableLeft="@drawable/detail_angel_icon"
	         	    android:paddingLeft="@dimen/dimen_10dp"
	         	    android:textColor="#000000"
	         	    android:text="user name" />
	</LinearLayout>
</RelativeLayout>