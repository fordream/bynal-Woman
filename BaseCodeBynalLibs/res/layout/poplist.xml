<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/piplist_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/piplist_main_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wheel_bg1"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:background="@drawable/profile_dialog_bg_header" >

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/poplist_baseTextView1_done"
                    android:layout_width="@dimen/dimen_35dp"
                    android:layout_height="@dimen/dimen_35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@drawable/profile_dialog_agree"
                    android:gravity="center" />

                <org.acv.bynal.views.BaseBoldTextView
                    android:id="@+id/poplist_baseTextView1_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/poplist_baseTextView1"
                    android:layout_alignBottom="@+id/poplist_baseTextView1"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:background="@drawable/profile_dialog_title" />

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/poplist_baseTextView1"
                    android:layout_width="@dimen/dimen_35dp"
                    android:layout_height="@dimen/dimen_35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:background="@drawable/profile_dialog_cancel"
                    android:gravity="center" />
            </RelativeLayout>

            <libs.wheel.WheelView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200dp"
                android:background="@drawable/wheel_bg1" />

            <ListView
                android:id="@+id/listView1_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200dp"
                android:background="@drawable/profile_dialog_bg"
                android:visibility="gone" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>