<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/a47_1_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/v3_bg"
    android:orientation="vertical" >

    <org.acv.bynal.views.HeaderView
        android:id="@+id/headerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.acv.bynal.views.HeaderView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp" >

        <org.acv.bynal.views.BaseBoldTextView
            android:id="@+id/BaseBoldTextView02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5dp"
            android:text="届け先を選んでください。"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_10dp"
            android:textStyle="bold" />

        <org.acv.bynal.views.BaseBoldTextView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/m1"
            android:gravity="center"
            android:text="届け先新規登録 "
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_10dp"
            android:textStyle="bold" />
    </RelativeLayout>
	<org.acv.bynal.views.BaseTextView
        android:id="@+id/pj_err_message"
        style="@style/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerView1"
        android:gravity="left"
        android:padding="@dimen/dimen_10dp"
        android:text="err"
        android:visibility="gone" />
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="@dimen/dimen_5dp"
        android:listSelector="@drawable/transfer" >
    </ListView>

</LinearLayout>