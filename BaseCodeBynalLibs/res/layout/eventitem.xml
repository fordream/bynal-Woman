<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/v3_new_and_event_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_22dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/newevent_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BaseTextView"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <org.acv.bynal.views.BaseBoldTextView
                    android:id="@+id/newevent_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:text="BaseTextView"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_13dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/newevent_news"
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_14dp"
                    android:src="@drawable/new_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/event_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/newevent_event"
                    android:layout_width="@dimen/dimen_22dp"
                    android:layout_height="@dimen/dimen_22dp"
                    android:background="@drawable/event" />
            </LinearLayout>
        </RelativeLayout>

        <org.acv.bynal.views.BaseTextView
            android:id="@+id/newevent_content"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="BaseTextView"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_10dp"
            android:visibility="gone" />

        <WebView
            android:id="@+id/newevent_content_web"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_10dp"
            android:visibility="gone" />

        <org.acv.bynal.views.BaseTextView
            android:id="@+id/newevent_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/dimen_13dp" />
    </LinearLayout>

</LinearLayout>