<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pm_delivery_m_main"
    android:background="@drawable/v3_bg"
    android:orientation="vertical" >
    <org.acv.bynal.views.HeaderView
        android:id="@+id/pm_delivery_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.acv.bynal.views.HeaderView>
	<LinearLayout
         android:id="@+id/top"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/pm_delivery_header"
         android:orientation="vertical"
         android:weightSum="2" >
         <LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="@dimen/dimen_70dp"
	         android:background="@drawable/delivery_box"
	         android:gravity="center_horizontal" 
	         android:orientation="horizontal">

	         	<org.acv.bynal.views.BaseBoldTextView
	         	    android:id="@+id/amount_txt"
	         	    android:layout_width="@dimen/dimen_66dp"
	         	    android:layout_height="wrap_content"
	         	    android:layout_marginLeft="@dimen/dimen_10dp"
	         	    android:layout_marginTop="@dimen/dimen_30dp"
	         	    android:gravity="left"
	         	    android:textSize="@dimen/dimen_14dp"
	         	    android:textColor="#000000"
	         	    android:text="支援金額" />
				<LinearLayout
		         android:layout_width="@dimen/dimen_109dp"
		         android:layout_height="wrap_content"
		         android:orientation="vertical">
		         	<LinearLayout
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:orientation="vertical">
		         	<org.acv.bynal.views.BaseBoldTextView
		         	    android:id="@+id/delivery_name_txt"
		         	    android:layout_width="fill_parent"
		         	    android:layout_height="wrap_content"
		         	    android:layout_marginTop="@dimen/dimen_11dp"
		         	    android:gravity="left"
		         	    android:textSize="@dimen/dimen_14dp"
		         	    android:textColor="#000000"
		         	    android:text="氏名" />
		         	<org.acv.bynal.views.BaseTextView
			            android:id="@+id/search_hr"
			            android:layout_width="fill_parent"
			            android:layout_marginTop="@dimen/dimen_6dp"
			            android:layout_height="1dp"
			            android:scaleType="fitXY"
			            android:background="@drawable/delivery_line1"
			            android:gravity="center|left" />
		         	<org.acv.bynal.views.BaseBoldTextView
		         	    android:id="@+id/delivery_phone_txt"
		         	    android:layout_width="fill_parent"
		         	    android:layout_height="wrap_content"
		         	    android:layout_marginTop="@dimen/dimen_6dp"
		         	    android:gravity="left"
		         	    android:textSize="@dimen/dimen_14dp"
		         	    android:textColor="#000000"
		         	    android:text="連絡先" />
		         	</LinearLayout>
	         	</LinearLayout>
	         	<LinearLayout
		         android:layout_width="@dimen/dimen_98dp"
		         android:layout_height="wrap_content"
		         android:orientation="vertical">
		         	<LinearLayout
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:orientation="vertical">
		         	<org.acv.bynal.views.BaseBoldTextView
		         	    android:id="@+id/delivery_zip_txt"
		         	    android:layout_width="fill_parent"
		         	    android:layout_height="wrap_content"
		         	    android:layout_marginTop="@dimen/dimen_11dp"
		         	    android:gravity="left"
		         	    android:textSize="@dimen/dimen_14dp"
		         	    android:textColor="#000000"
		         	    android:text="郵便局" />
		         	<org.acv.bynal.views.BaseTextView
			            android:id="@+id/search_hr"
			            android:layout_width="fill_parent"
			            android:layout_height="1dp"
			            android:layout_marginTop="@dimen/dimen_6dp"
			            android:scaleType="fitXY"
			            android:background="@drawable/delivery_line2"
			            android:gravity="center|left" />
		         	<org.acv.bynal.views.BaseBoldTextView
		         	    android:id="@+id/delivery_address_txt"
		         	    android:layout_width="fill_parent"
		         	    android:layout_height="wrap_content"
		         	    android:layout_marginTop="@dimen/dimen_6dp"
		         	    android:gravity="left"
		         	    android:textSize="@dimen/dimen_14dp"
		         	    android:textColor="#000000"
		         	    android:text="配送先住所" />
		         	</LinearLayout>
	         	</LinearLayout>

				<LinearLayout
				    android:layout_width="@dimen/dimen_23dp"
				    android:layout_height="wrap_content"
				    android:orientation="vertical" >
				</LinearLayout>
 	
         </LinearLayout>
         <org.acv.bynal.views.BaseTextView
		    android:id="@+id/pm_err_message"
		    style="@style/error_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/top"
		    android:gravity="left"
		    android:text=""
		    android:padding="@dimen/dimen_10dp"
		    android:visibility="gone" />
         <ListView
             android:id="@+id/listview_delivery"
             android:layout_below="@+id/pm_err_message"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/dimen_10dp"
			 android:layout_marginRight="@dimen/dimen_10dp"
             android:divider="@drawable/delivery_line3"
             android:dividerHeight="1dp" >
	
		</ListView>
		
    </LinearLayout> 
   
</RelativeLayout>