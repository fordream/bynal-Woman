<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dimen_55dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="@dimen/dimen_43dp"
        android:orientation="horizontal">
        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/dimen_25dp"
        android:layout_height="@dimen/dimen_43dp"
        android:background="@drawable/detail_tag_left" />
	    <org.acv.bynal.views.BaseTextView
	        android:id="@+id/tag_value"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/dimen_43dp"
	        android:background="@drawable/detail_tag_repeat"
	        android:gravity="center_vertical"
	        android:paddingLeft="@dimen/dimen_20dp"
	        android:textColor="#414141"
	        android:maxWidth="@dimen/dimen_250dp"
	        android:maxLength="13"
	        android:textSize="@dimen/dimen_18dp" />
	
	    <ImageView
	        android:layout_width="@dimen/dimen_25dp"
	        android:layout_height="@dimen/dimen_43dp"
	        android:layout_toRightOf="@+id/tag_value"
	        android:background="@drawable/detail_tag_right" />
	</LinearLayout>			        
   

    <ImageView
        android:id="@+id/tag_delete"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@drawable/delete_tag"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:visibility="visible" />

</RelativeLayout>