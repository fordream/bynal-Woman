<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <org.acv.bynal.views.HeaderView
        android:id="@+id/headerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.acv.bynal.views.HeaderView>

    <ScrollView
        android:id="@+id/mfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <WebView
                android:id="@+id/moew_m1_web"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            </WebView>

            <LinearLayout
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_115dp"
                android:layout_alignBottom="@+id/moew_m1_web"
                android:gravity="right|top"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/moew_m1_email"
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>