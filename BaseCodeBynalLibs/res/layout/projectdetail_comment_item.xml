<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
	<LinearLayout
	         android:layout_width="@dimen/dimen_300dp"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:paddingBottom="@dimen/dimen_10dp"
	         android:background="@drawable/detail_comment_box">
	         <RelativeLayout
		        android:layout_width="@dimen/dimen_90dp"
		        android:layout_height="wrap_content"
		        android:gravity="top|center_vertical"
		        android:layout_marginTop="@dimen/dimen_15dp"
		        android:layout_marginLeft="@dimen/dimen_10dp"
		        android:orientation="horizontal">
		         <ImageView
				    android:id="@+id/comment_avatar_bg"
				    android:layout_width="@dimen/dimen_84dp"
				    android:layout_height="@dimen/dimen_85dp"
				    android:visibility="visible"
				    android:scaleType="fitXY"
				    android:src="@drawable/detail_comment_image" />
				<ImageView
				    android:id="@+id/comment_avatar"
				    android:layout_width="@dimen/dimen_82dp"
				    android:layout_height="@dimen/dimen_82dp"
				    android:visibility="visible"
				    android:scaleType="fitXY"
				    android:src="@drawable/default_user_square2" />
			</RelativeLayout>
			<LinearLayout
	         android:layout_width="@dimen/dimen_210dp"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="@dimen/dimen_10dp"
	         android:orientation="vertical">
		         <LinearLayout
		         android:layout_width="@dimen/dimen_190dp"
		         android:layout_height="wrap_content"
		         android:orientation="horizontal">
					<org.acv.bynal.views.BaseTextView
		         	    android:id="@+id/comment_name"
		         	    android:layout_width="@dimen/dimen_110dp"
		         	    android:layout_height="wrap_content"
		         	    android:gravity="left"
		         	    android:textSize="@dimen/dimen_13dp"
		         	    android:textColor="#000000"
		         	    android:text="" />
					<org.acv.bynal.views.BaseTextView
		         	    android:id="@+id/comment_created"
		         	    android:layout_width="@dimen/dimen_80dp"
		         	    android:layout_height="wrap_content"
		         	    android:gravity="right"
		         	    android:textSize="@dimen/dimen_13dp"
		         	    android:textColor="#000000"
		         	    android:text="" />
				</LinearLayout>
				<org.acv.bynal.views.BaseTextView
	         	    android:id="@+id/comment_commenttxt"
	         	    android:layout_width="@dimen/dimen_190dp"
	         	    android:layout_height="wrap_content"
	         	    android:gravity="left"
	         	    android:textSize="@dimen/dimen_14dp"
	         	    android:textColor="#000000"
	         	    android:text="" />
					<LinearLayout
			            android:layout_width="match_parent"
			            android:layout_height="@dimen/dimen_15dp">
			     	</LinearLayout>
			</LinearLayout>

			 
	</LinearLayout>
</RelativeLayout>