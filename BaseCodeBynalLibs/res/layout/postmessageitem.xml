<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_10dp" >

    <LinearLayout
        android:id="@+id/postmesage_m1"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/postmesage_avatar1"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp" >

            <!-- <com.example.ttest.views.RoundedImageView
                android:id="@+id/postmesage_avatar_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" /> -->
			<ImageView
                android:id="@+id/postmesage_avatar_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />
            <ImageView
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/message_2" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/postmesage_m2"
            android:layout_width="@dimen/dimen_242dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/v3_message_note1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/v3_message_note1"
                android:orientation="vertical" >

                <org.acv.bynal.views.BaseBoldTextView
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:id="@+id/postmesage_textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:text="BaseBoldTextView"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_13dp"
                    android:textStyle="bold" />

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/postmesage_textview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:text="BaseTextView"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_10dp" />

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/postmesage_textview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:text="BaseTextView"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_10dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/postmesage_avatar2"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp" >

           <!--  <com.example.ttest.views.RoundedImageView
                android:id="@+id/postmesage_avatar_img2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" /> -->
			<ImageView
                android:id="@+id/postmesage_avatar_img2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />
            <ImageView
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/message_2" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>