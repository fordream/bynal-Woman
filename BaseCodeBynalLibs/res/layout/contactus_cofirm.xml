<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mfragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sharecontact_bg"
    android:orientation="vertical" >

    <org.acv.bynal.views.HeaderView
        android:id="@+id/headerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.acv.bynal.views.HeaderView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/baseBoldTextView2"
                android:layout_width="@dimen/dimen_300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:text="お問い合わせ"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/baseTextView1"
                android:layout_width="@dimen/dimen_300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="BYNALは、掲載されているプロジェクトへのご質問にはお答えできません。\n各プロジェクトに関するお問い合わせは、個別にプロジェクトページよりお願いします。\nまた、BYNALの利用に関するお問い合わせは、必ずヘルプを先にご確認ください。 "
                android:textColor="#333333"
                android:textSize="@dimen/dimen_13dp" />

            <LinearLayout
                style="@style/bynal_edit_text"
                android:layout_width="@dimen/dimen_300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@drawable/v3_new_and_event_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_10dp" >

                <LinearLayout
                    style="@style/bynal_edit_text_height_27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <org.acv.bynal.views.BaseBoldTextView
                            android:id="@+id/baseBoldTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_3dp"
                            android:freezesText="false"
                            android:gravity="center|left"
                            android:text="メールアドレス"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_13dp"
                            android:textStyle="bold|normal"
                            android:typeface="normal" />

                        <org.acv.bynal.views.BaseBoldTextView
                            style="@style/star_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:typeface="normal" />
                    </LinearLayout>

                    <org.acv.bynal.views.BaseTextView
                        android:id="@+id/contactus_email"
                        style="@style/bynal_edit_text_height_27"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40dp"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    style="@style/bynal_edit_text_height_27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <org.acv.bynal.views.BaseBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_2dp"
                            android:gravity="center|left"
                            android:text="件名"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_13dp"
                            android:textStyle="bold|normal" />

                        <org.acv.bynal.views.BaseBoldTextView
                            style="@style/star_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:typeface="normal" />
                    </LinearLayout>

                    <org.acv.bynal.views.BaseTextView
                        android:id="@+id/contactus_title"
                        style="@style/bynal_edit_text_height_27"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40dp"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    style="@style/bynal_edit_text_height_27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <org.acv.bynal.views.BaseBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_2dp"
                            android:gravity="center|left"
                            android:text="内容"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_13dp"
                            android:textStyle="bold|normal" />

                        <org.acv.bynal.views.BaseBoldTextView
                            style="@style/star_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:typeface="normal" />
                    </LinearLayout>

                    <org.acv.bynal.views.BaseTextView
                        android:id="@+id/contactus_descripntion"
                        style="@style/bynal_edit_text_height_27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="top|left"
                        android:textColor="#333333" />
                </LinearLayout>

                <org.acv.bynal.views.BaseBoldTextView
                    android:id="@+id/contactus_btn"
                    style="@style/v3_button"
                    android:layout_width="@dimen/dimen_147dp"
                    android:layout_height="@dimen/dimen_32dp"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:text="@string/str_contactus_2"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>