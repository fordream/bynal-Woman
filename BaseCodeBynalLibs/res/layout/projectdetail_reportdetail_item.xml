<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_comment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:orientation="vertical" >

     <LinearLayout
         android:id="@+id/reportdetail_top"
         android:layout_width="@dimen/dimen_300dp"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentLeft="true"
         android:background="@drawable/detail_report_box1"
         android:gravity="left"
         android:orientation="vertical" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal" >

             <org.acv.bynal.views.BaseTextView
                 android:id="@+id/report_no_txt"
                 android:layout_width="@dimen/dimen_25dp"
                 android:layout_height="@dimen/dimen_25dp"
                 android:background="@drawable/detail_report_number"
                 android:gravity="center"
                 android:padding="2dp"
                 android:text="1"
                 android:textColor="#ffffff"
                 android:textSize="@dimen/dimen_15dp" />

             <org.acv.bynal.views.BaseBoldTextView
                 android:id="@+id/report_user_name_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="left"
                 android:paddingLeft="@dimen/dimen_5dp"
                 android:text="user name"
                 android:textColor="#000000"
                 android:layout_weight="0.5"
                 android:textSize="@dimen/dimen_15dp" />

             <org.acv.bynal.views.BaseTextView
                 android:id="@+id/reportdetail_created_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="right"
                 android:layout_marginRight="10dp"
                 android:text="2014-06-20 09:17:02"
                 android:textColor="#000000"
                 android:layout_weight="0.5"
                 android:textSize="@dimen/dimen_12dp" />

         </LinearLayout>

         <org.acv.bynal.views.BaseTextView
             android:id="@+id/report_comment_body_txt"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:gravity="left"
             android:text="body"
             android:textColor="#000000"
             android:textSize="@dimen/dimen_16dp" />
     </LinearLayout>
			
</RelativeLayout>