<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mesage_main_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/v3_mesage_item_bg"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="@dimen/dimen_75dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/v3_new_and_event_bg"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp" >

        <RelativeLayout
            android:id="@+id/mesage_main_icon_border"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_45dp" >

            <!-- <com.example.ttest.views.RoundedImageView
                android:id="@+id/mesage_main_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" /> -->
            
            <ImageView
                 android:id="@+id/mesage_main_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/mesage_main_icon_f"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/message_2" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mesage_main_item_text"
            android:layout_width="@dimen/dimen_210dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/messageitem_uername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="BaseTextView"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/messageitem_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="BaseTextView"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_12dp" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/messageitem_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10dp"
                android:singleLine="true"
                android:text="BaseTextView"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mesageitem_btn"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_45dp"
            android:background="@drawable/message_1"
            android:focusable="false" />
    </LinearLayout>

</LinearLayout>