<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_233dp"
    android:gravity="center"
    android:layout_marginTop="@dimen/dimen_15dp"
    android:layout_marginBottom="@dimen/dimen_15dp"
    android:layout_marginLeft="@dimen/dimen_10dp"
   	android:layout_marginRight="@dimen/dimen_10dp"
    android:orientation="vertical" >

    <!-- <ImageView
        android:id="@+id/homeitem_img222"
        android:layout_width="@dimen/dimen_306dp"
        android:layout_height="@dimen/dimen_233dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/search_image_box"
        android:scaleType="fitXY"/> -->
    <LinearLayout
        android:id="@+id/homeitem_img_main"
        android:layout_width="@dimen/dimen_310dp"
        android:layout_height="@dimen/dimen_243dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/v3_border_shadow_xml">
         <ImageView
	        android:id="@+id/homeitem_img"
	        android:layout_width="@dimen/dimen_310dp"
	        android:layout_height="@dimen/dimen_243dp"
	        android:gravity="center"
	        android:paddingBottom="@dimen/dimen_2dp"
	        android:background="@null"
	        android:scaleType="centerCrop"/>
    </LinearLayout>      
   

    <LinearLayout
        android:id="@+id/homeitem_content_1"
        android:layout_width="@dimen/dimen_298dp"
        android:layout_height="@dimen/dimen_35dp"
        android:layout_alignLeft="@+id/homeitem_img_main"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/homeitem_img_main"
        android:layout_marginBottom="@dimen/dimen_0dp"
        android:background="#95FFFFFF"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/homeitem_content_step1"
            android:layout_width="@dimen/dimen_160dp"
            android:layout_height="@dimen/dimen_35dp"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/homeitem_img_1"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/home_p1" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/homeitem_txtname_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeitem_content_step2"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_35dp"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/homeitem_img_2"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:background="@drawable/home_p2" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/homeitem_txtname_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeitem_content_step3"
           android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_35dp"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/homeitem_img_3"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:background="@drawable/home_p3" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/homeitem_txtname_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <org.acv.bynal.views.BaseTextView
        android:id="@+id/homeitem_txtname"
        android:layout_width="@dimen/dimen_298dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/homeitem_content_1"
        android:layout_alignLeft="@+id/homeitem_img_main"
        android:layout_alignRight="@+id/homeitem_img_main"
        android:background="#80444444"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_18dp"
        android:textStyle="bold" />

</RelativeLayout>