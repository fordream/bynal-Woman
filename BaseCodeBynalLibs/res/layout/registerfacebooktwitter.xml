<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forgotpassword_m_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sharecontact_bg"
    android:orientation="vertical" >

    <org.acv.bynal.views.HeaderView
        android:id="@+id/registerfacebook_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.acv.bynal.views.HeaderView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <org.acv.bynal.views.BaseBoldTextView
                    android:id="@+id/lregisterfacebooktwitter_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:gravity="bottom"
                    android:text="ユーザ名（ニックネーム可）"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <org.acv.bynal.views.BaseBoldTextView
                    style="@style/star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:typeface="normal" />
            </LinearLayout>

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/registerfacebooktwitter_edt1"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center|left"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <org.acv.bynal.views.BaseBoldTextView
                    android:id="@+id/registerfacebooktwitter_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="bottom"
                    android:text="Eメール"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <org.acv.bynal.views.BaseBoldTextView
                    style="@style/star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:typeface="normal" />
            </LinearLayout>

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/registerfacebooktwitter_edt2"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="@dimen/dimen_40dp"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <org.acv.bynal.views.BaseBoldTextView
                    android:id="@+id/registerfacebooktwitter_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="bottom"
                    android:text="パスワード"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <org.acv.bynal.views.BaseBoldTextView
                    style="@style/star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:typeface="normal" />
            </LinearLayout>

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/registerfacebooktwitter_edt3"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <org.acv.bynal.views.BaseBoldTextView
                    android:id="@+id/registerfacebooktwitter_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="bottom"
                    android:text="パスワード(確認用)"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <org.acv.bynal.views.BaseBoldTextView
                    style="@style/star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:typeface="normal" />
            </LinearLayout>

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/registerfacebooktwitter_edt4"
                style="@style/bynal_edit_text_height_27"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="@dimen/dimen_40dp"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:singleLine="true" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/registerfacebooktwitter_btn1"
                style="@style/v3_button_facebook"
                android:layout_width="@dimen/dimen_222dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:text="@string/v3_register_facebook" />
            
            
            <org.acv.bynal.views.BaseTextView
                android:id="@+id/registerfacebooktwitter_btn1_twwiter"
                style="@style/v3_button_twitter"
                android:layout_width="@dimen/dimen_222dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:text="@string/v3_register_twwiter" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>