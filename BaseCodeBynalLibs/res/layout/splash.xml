<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/spalsh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/intro_bg" />

        <LinearLayout
            android:id="@+id/logo_text_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_142dp"
                android:layout_height="@dimen/dimen_21dp"
                android:background="@drawable/intro_text" />

            <ImageView
                android:id="@+id/imageView1_mm"
                android:layout_width="@dimen/dimen_142dp"
                android:layout_height="@dimen/dimen_30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30" />

            <ImageView
                android:id="@+id/spalsh_logo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:src="@drawable/intro_icon" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="55" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>