<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <org.acv.bynal.views.BaseBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:text="人気プロジェクト"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_18dp" />

    <!--   android:background="@drawable/v3_home_sessiong1_border_xml" -->
    <RelativeLayout
        android:id="@+id/v3home_sesion1_item_img_bg"
        android:layout_width="@dimen/dimen_260dp"
        android:layout_height="@dimen/dimen_200dp"
      android:background="@drawable/a_sesstion1_background_xml"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/v3home_sesion1_item_img"
            android:layout_width="@dimen/dimen_240dp"
            android:layout_height="@dimen/dimen_180dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <org.acv.bynal.views.BaseBoldTextView
        android:id="@+id/v3home_sesion1_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:gravity="center"
        android:lines="2"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/dimen_35dp"
        android:paddingRight="@dimen/dimen_35dp"
        android:text="BaseBoldTextView"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_15dp" />
<!-- dimen_253dp -->
    <LinearLayout
        android:id="@+id/homeitem_content_1"
        android:layout_width="@dimen/dimen_263dp"
        android:layout_height="@dimen/dimen_28dp"
        android:background="@drawable/home_session_1_bg_three"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_4dp" >

        <LinearLayout
            android:id="@+id/homeitem_content_step1"
            android:layout_width="@dimen/dimen_128dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/homeitem_img_1"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/home_p1" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/homeitem_txtname_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="BaseTextView"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeitem_content_step2"
            android:layout_width="@dimen/dimen_63dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/homeitem_img_2"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:background="@drawable/home_p2" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/homeitem_txtname_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="BaseTextView"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeitem_content_step3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/homeitem_img_3"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:background="@drawable/home_p3" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/homeitem_txtname_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:paddingLeft="5dp"
                android:text="BaseTextView"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_12dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>