<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_10dp"
    android:orientation="vertical" >
    <LinearLayout
         android:id="@+id/top_1"
	         android:layout_width="fill_parent"
	         android:layout_height="@dimen/dimen_10dp"
	         android:orientation="vertical"
	         android:background="@drawable/detail_report_box_top"
	         android:padding="@dimen/dimen_10dp">
	</LinearLayout>         
	<LinearLayout
         android:id="@+id/top"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="vertical"
	         android:background="@drawable/detail_report_box_repeat"
	         android:layout_below="@+id/top_1"
	         android:padding="@dimen/dimen_10dp">
	         <LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal">
		         <ImageView
	                 android:id="@+id/mesage_main_icon_f"
	                 android:layout_width="@dimen/dimen_14dp"
	                 android:layout_height="@dimen/dimen_15dp"
	                 android:scaleType="fitXY"
	                 android:layout_marginTop="@dimen/dimen_5dp"
	                 android:background="@drawable/detail_report_icon1" />
	         	<org.acv.bynal.views.BaseBoldTextView
	         	    android:id="@+id/report_title_txt"
	         	    android:layout_width="fill_parent"
	         	    android:layout_height="wrap_content"
	         	    android:gravity="left"
	         	    android:layout_marginLeft="@dimen/dimen_3dp"
	         	    android:text=""
	         	    android:textSize="@dimen/dimen_14dp"
	         	    android:textColor="#000000"/>
	         </LinearLayout>
			
			<org.acv.bynal.views.BaseTextView
	         	    android:id="@+id/report_datepost_txt"
	         	    android:layout_width="fill_parent"
	         	    android:layout_height="wrap_content"
	         	    android:gravity="left"
	         	    android:text=""
	         	    android:textSize="@dimen/dimen_14dp"
	         	    android:textColor="#000000"/>
			<org.acv.bynal.views.BaseTextView
	         	    android:id="@+id/report_desc_txt"
	         	    android:layout_width="fill_parent"
	         	    android:layout_height="wrap_content"
	         	    android:gravity="left"
	         	    android:layout_marginTop="5dp"
	         	    android:layout_marginBottom="5dp"
	         	    android:text=""
	         	    android:maxLines="3"
					android:scrollHorizontally="false"
					android:ellipsize="end"
	         	    android:textSize="@dimen/dimen_14dp"
	         	    android:textColor="#000000"/>
			<LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal">
	         	<org.acv.bynal.views.BaseTextView
	         	    android:id="@+id/report_commentcount_txt"
	         	    android:layout_width="wrap_content"
	         	    android:layout_height="wrap_content"
	         	    android:gravity="left"
	         	    android:text=""
	         	    android:drawableRight="@drawable/detail_report_icon2"
	         	    android:textSize="@dimen/dimen_14dp"
	         	    android:textColor="#D3535A"/>
				<org.acv.bynal.views.BaseTextView
	         	    android:id="@+id/report_datecreate_txt"
	         	    android:layout_width="wrap_content"
	         	    android:layout_height="wrap_content"
	         	    android:gravity="right"
	         	    android:layout_weight="0.5"
	         	    android:text=""
	         	    android:textSize="@dimen/dimen_14dp"
	         	    android:textColor="#000000"/>
			
			
			</LinearLayout>
			<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/dimen_15dp">
	     	</LinearLayout>
	</LinearLayout>
	<LinearLayout
         android:id="@+id/top_2"
	         android:layout_width="fill_parent"
	         android:layout_height="@dimen/dimen_15dp"
	         android:orientation="vertical"
	         android:background="@drawable/detail_report_box_bot"
	         android:layout_below="@+id/top"
	         android:padding="@dimen/dimen_10dp">
	</LinearLayout>   
</RelativeLayout>