<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/v3_bg"
    android:gravity="center|top"
    android:id="@+id/changepass_m_main"
    android:orientation="vertical" >
	<org.acv.bynal.views.HeaderView
        android:id="@+id/changepassword_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.acv.bynal.views.HeaderView>
    <ScrollView
        android:id="@+id/login_main_login"
        android:layout_width="@dimen/dimen_300dp"
		android:layout_centerHorizontal="true"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/profile_user_changepass_text1"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_9dp"
                android:layout_marginTop="@dimen/dimen_22dp"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_14dp"
                android:gravity="bottom"
                android:text="新しいパスワード" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/profile_user_changepass"
                android:layout_width="@dimen/dimen_212dp"
	            android:layout_height="@dimen/dimen_40dp"
	            android:background="@drawable/v3_dittext"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="@dimen/dimen_14dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="" />

            <org.acv.bynal.views.BaseTextView
                android:id="@+id/profile_user_changepass_text2"
                android:layout_width="@dimen/dimen_212dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_9dp"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_14dp"
                android:gravity="bottom"
                android:text="新しいパスワード（確認用）" />

            <org.acv.bynal.views.BaseEditText
                android:id="@+id/profile_user_changepass_conf"
                android:layout_width="@dimen/dimen_212dp"
	            android:layout_height="@dimen/dimen_40dp"
	            android:background="@drawable/v3_dittext"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="@dimen/dimen_14dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="" />

            <org.acv.bynal.views.BaseBoldTextView
                android:id="@+id/profile_user_btnchangepass"
                style="@style/v3_button"
                android:layout_width="@dimen/dimen_198dp"
                android:layout_height="@dimen/dimen_42dp"
                android:layout_marginTop="@dimen/dimen_140dp"
                android:layout_marginBottom="@dimen/dimen_33dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="変更"
	         	android:textSize="@dimen/dimen_18dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>