<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/xml_a47_header"
                android:orientation="vertical" >
            </LinearLayout>

            <org.acv.bynal.views.BaseBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="届け先情報"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp" >

                <org.acv.bynal.views.BaseTextView
                    android:layout_width="@dimen/dimen_130dp"
                    android:layout_height="match_parent"
                    android:background="#e6e6e6"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:text="受取人氏名"
                    android:textColor="#282828"
                    android:textSize="@dimen/dimen_11dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#b5b5b5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:text="新しい届け住所を入力"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_11dp"
                    android:textStyle="bold" >

                    <org.acv.bynal.views.BaseTextView
                        android:id="@+id/a47_1_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_27dp"
                        android:gravity="center|left"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="abx"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_11dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#b5b5b5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp" >

                <org.acv.bynal.views.BaseTextView
                    android:layout_width="@dimen/dimen_130dp"
                    android:layout_height="match_parent"
                    android:background="#e6e6e6"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:text="郵便番号"
                    android:textColor="#282828"
                    android:textSize="@dimen/dimen_11dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#b5b5b5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:text="新しい届け住所を入力"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_11dp"
                    android:textStyle="bold" >

                    <org.acv.bynal.views.BaseTextView
                        android:id="@+id/a47_1_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_27dp"
                        android:gravity="center|left"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="abx"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_11dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#b5b5b5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp" >

                <org.acv.bynal.views.BaseTextView
                    android:layout_width="@dimen/dimen_130dp"
                    android:layout_height="match_parent"
                    android:background="#e6e6e6"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:text="配送先住所"
                    android:textColor="#282828"
                    android:textSize="@dimen/dimen_11dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#b5b5b5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:text="新しい届け住所を入力"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_11dp"
                    android:textStyle="bold" >

                    <org.acv.bynal.views.BaseTextView
                        android:id="@+id/a47_1_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_27dp"
                        android:gravity="center|left"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="abx"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_11dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#b5b5b5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp" >

                <org.acv.bynal.views.BaseTextView
                    android:layout_width="@dimen/dimen_130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/xml_a47_comfirm_bottom"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:text="連絡先（ハイフンなし）"
                    android:textColor="#282828"
                    android:textSize="@dimen/dimen_11dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#b5b5b5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/xml_a47_comfirm_rightbottom"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:text="新しい届け住所を入力" >

                    <org.acv.bynal.views.BaseTextView
                        android:id="@+id/a47_1_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_27dp"
                        android:background="@drawable/transfer"
                        android:gravity="center|left"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="abx"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_11dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>