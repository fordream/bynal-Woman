<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuitem_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menu_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@drawable/v3_menu_main_bg_xml"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- android:background="@drawable/v3_menu_main_bg_xml" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/menu_img_header"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_50dp" />

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/menutextview_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:text="TextView"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_header_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/menu_m1"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_sup_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:background="@drawable/v3_menu_main_bg_2_xml"
        android:divider="@null"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/LinearLayout04"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_15dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center" >

                <ImageView
                    android:layout_marginLeft="@dimen/dimen_9dp"
                    android:layout_marginRight="@dimen/dimen_9dp"
                    android:id="@+id/ImageView04"
                    android:layout_width="@dimen/dimen_19dp"
                    android:layout_height="@dimen/dimen_19dp"/>

                <org.acv.bynal.views.BaseTextView
                    android:id="@+id/BaseTextView04"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_home_contact_us"
                    android:textColor="#999999"
                     android:textSize="@dimen/dimen_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_8dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/linearLayout1"
                android:background="@drawable/border_submenu"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>