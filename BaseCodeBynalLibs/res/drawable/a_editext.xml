<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="@dimen/dimen_3dp" android:left="@dimen/dimen_2dp">
        <shape >
            <solid android:color="#00CCCCCC" />

            <stroke
                android:width="@dimen/dimen_1dp"
                android:color="#00CCCCCC" />

            <corners
                android:bottomLeftRadius="@dimen/dimen_2dp"
                android:bottomRightRadius="@dimen/dimen_3dp"
                android:topLeftRadius="@dimen/dimen_3dp"
                android:topRightRadius="@dimen/dimen_3dp" />
        </shape>
    </item>

    <!-- background -->
    <item
        android:bottom="@dimen/dimen_3dp"
        android:right="@dimen/dimen_3dp">
        <rotate>
            <shape android:shape="rectangle" >
                <solid android:color="#ffffff" />

                <stroke
                    android:width="@dimen/dimen_1dp"
                    android:color="#cc0033" />

                <corners
                    android:bottomLeftRadius="@dimen/dimen_3dp"
                    android:bottomRightRadius="@dimen/dimen_3dp"
                    android:topLeftRadius="@dimen/dimen_3dp"
                    android:topRightRadius="@dimen/dimen_3dp" />
            </shape>
        </rotate>
    </item>

</layer-list>